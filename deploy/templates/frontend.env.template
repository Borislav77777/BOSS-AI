# Boss AI Platform - Frontend (.env)
# Файл: frontend/.env
#
# Настройки React приложения

# ============================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ============================================

VITE_APP_TITLE=Boss AI Platform
VITE_APP_VERSION=3.3.0
VITE_APP_ENV=production
VITE_NODE_ENV=production

# ============================================
# API НАСТРОЙКИ
# ============================================

VITE_API_BASE_URL=https://{{DOMAIN}}/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# ============================================
# TELEGRAM АВТОРИЗАЦИЯ
# ============================================

VITE_TELEGRAM_BOT_USERNAME=OzonBossAi_bot
VITE_TELEGRAM_WIDGET_SCRIPT=https://telegram.org/js/telegram-widget.js

# ============================================
# ДОМЕН И URL
# ============================================

VITE_DOMAIN={{DOMAIN}}
VITE_BASE_URL=https://{{DOMAIN}}
VITE_APP_URL=https://{{DOMAIN}}/app

# ============================================
# БЕЗОПАСНОСТЬ
# ============================================

VITE_CSP_ENABLED=true
VITE_HTTPS_ONLY=true
VITE_SECURE_COOKIES=true

# ============================================
# КЭШИРОВАНИЕ
# ============================================

VITE_CACHE_VERSION=1.0.0
VITE_SW_ENABLED=true
VITE_CACHE_STRATEGY=networkFirst

# ============================================
# МОНИТОРИНГ
# ============================================

VITE_ANALYTICS=false
VITE_SENTRY_DSN=
VITE_GA_TRACKING_ID=
VITE_YANDEX_METRIKA_ID=

# ============================================
# AI СЕРВИСЫ
# ============================================

VITE_OPENAI_API_KEY=
VITE_ANTHROPIC_API_KEY=

# ============================================
# ВНЕШНИЕ СЕРВИСЫ
# ============================================

VITE_STRIPE_PUBLIC_KEY=
VITE_PAYPAL_CLIENT_ID=

# ============================================
# СОЦИАЛЬНЫЕ СЕТИ
# ============================================

VITE_VK_APP_ID=
VITE_GOOGLE_CLIENT_ID=

# ============================================
# УВЕДОМЛЕНИЯ
# ============================================

VITE_PUSH_PUBLIC_KEY=
VITE_FCM_SERVER_KEY=

# ============================================
# ФАЙЛЫ
# ============================================

VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain

# ============================================
# ЧАТ
# ============================================

VITE_CHAT_HISTORY_LIMIT=100
VITE_CHAT_AUTO_SAVE=true
VITE_CHAT_TYPING_INDICATOR=true

# ============================================
# РАБОЧЕЕ ПРОСТРАНСТВО
# ============================================

VITE_WORKSPACE_AUTO_SAVE=true
VITE_WORKSPACE_BACKUP_INTERVAL=300000
VITE_WORKSPACE_MAX_SIZE=104857600

# ============================================
# ТЕМЫ
# ============================================

VITE_DEFAULT_THEME=dark
VITE_THEME_PERSISTENCE=true
VITE_THEME_SYSTEM_DETECTION=true

# ============================================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# ============================================

VITE_LAZY_LOADING=true
VITE_IMAGE_OPTIMIZATION=true
VITE_BUNDLE_ANALYZER=false
VITE_PRELOAD_STRATEGY=aggressive

