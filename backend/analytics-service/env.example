# Analytics Service Configuration
NODE_ENV=development
PORT=4400

# Database
DB_PATH=./data/boss_ai.db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=15d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/analytics.log

# Speech Analytics (152 ФЗ)
SPEECH_API_KEY=your_speech_api_key_here
SPEECH_API_URL=http://localhost:5000
SPEECH_WEBHOOK_URL=http://localhost:4400/api/analytics/speech/webhook

# Analytics Settings
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_AGGREGATION_INTERVAL=3600
ANALYTICS_BATCH_SIZE=1000

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
