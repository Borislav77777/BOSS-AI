# Boss AI Platform - API Gateway Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=production
PORT=3000

# Database
DB_PATH=./data/boss_ai.db

# CORS
CORS_ORIGIN=https://boss-ai.online

# Logging
LOG_LEVEL=info

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=30d

# Microservices URLs
OZON_MANAGER_URL=http://localhost:4200
AI_SERVICES_URL=http://localhost:4300

# Optional: Redis (if using caching)
# REDIS_URL=redis://localhost:6379

# Optional: Sentry (if using error tracking)
# SENTRY_DSN=your_sentry_dsn_here
