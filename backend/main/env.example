# Boss AI Platform - API Gateway Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DB_PATH=./data/boss_ai.db

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Microservices URLs
OZON_MANAGER_URL=http://localhost:4200
AI_SERVICES_URL=http://localhost:4300
ANALYTICS_SERVICE_URL=http://localhost:4400

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/api_gateway.log
